{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>
		Ma commande</h1>

	<p>Commande nÂ°
		{{ purchase.id }}</p>
	<p>{{ purchase.address }}<br>{{ purchase.postalCode }},
		{{ purchase.city }}</p>
	<p>{{ purchase.purchasedAt.format('d/m/Y') }}</p>
	<a class="btn btn-success mb-3 float-r" href="{{ path('recommand_purchase',{'id':purchase.id}) }}">Recommander</a>
	<table class="table">
		<thead>
			<tr>
				<th>id</th>
				<th>Nom</th>
				<th>Image</th>
				<th>quantite</th>
				<th>Prix/U</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{# {{dump(purchase)}} #}
			{% for item in purchase.purchaseItems %}
				<tr>
					<td>
						<a href=" {{path('product_show',{'category_slug':item.product.category.slug,'slug':item.product.slug}) }} ">{{ item.product.id }}</a>
					</td>
					<td>
						{{ item.productName }}
					</td>
					<td>
						<img class="img-fluid" src="{{ item.product.mainPicture}}" alt="{{ item.productName }}">
					</td>
					<td>
						{{item.quantity}}
					</td>
					<td>
						{{item.productPrice/100}}
					</td>
					<td>
						{{item.total}}
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</tbody>
</table>{% endblock %}
